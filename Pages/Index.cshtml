@page
@using ExpenseTracking.Models
@model ExpenseTracking.Pages.ExpenseModel
@{
    ViewData["Title"] = "Expenses";
}

<h4>Add New Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mb-3">
                <label asp-for="Expense.ExpenseDate" class="control-label col-form-label col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="Expense.ExpenseDate" class="form-control" />
                    <span asp-validation-for="Expense.ExpenseDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Expense.UserId" class="control-label col-form-label col-sm-4"></label>
                <div class="col-sm-8">
                    <select asp-for="Expense.UserId" class ="form-control" asp-items="ViewBag.User"></select>
                    <span asp-validation-for="Expense.UserId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Expense.ExpenseTypeId" class="control-label col-form-label col-sm-4"></label>
                <div class="col-sm-8">
                    <select asp-for="Expense.ExpenseTypeId" class ="form-control" asp-items="ViewBag.ExpenseType"></select>
                    <span asp-validation-for="Expense.ExpenseTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Expense.CurrencyId" class="control-label col-form-label col-sm-4"></label>
                <div class="col-sm-8">
                    <select asp-for="Expense.CurrencyId" class ="form-control" asp-items="ViewBag.Currency"></select>
                    <span asp-validation-for="Expense.CurrencyId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Expense.Amount" class="control-label col-form-label col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="Expense.Amount" class="form-control" />
                    <span asp-validation-for="Expense.Amount" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row col-sm-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Expenses[0].ExpenseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expenses[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expenses[0].ExpenseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expenses[0].Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expenses[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Expenses) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}